<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#C62828" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#B71C1C" />
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#E53935" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#D32F2F" />
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#BDBDBD" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#9E9E9E" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F44336" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#D32F2F" />
        </shape>
    </item>

</selector>