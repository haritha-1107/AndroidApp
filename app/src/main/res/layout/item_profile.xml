<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="12dp"
    app:cardCornerRadius="12dp"
    app:strokeColor="@color/primary_color"
    app:cardElevation="4dp"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top row: Profile name and switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Profile Name"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/primary_color" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/active_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false" />
        </LinearLayout>

        <!-- Trigger info -->
        <TextView
            android:id="@+id/trigger_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trigger info"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp" />

        <!-- Ringer mode -->
        <TextView
            android:id="@+id/ringer_mode_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ringer Mode"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp" />

        <!-- Created at -->
        <TextView
            android:id="@+id/created_at_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created: Apr 20, 2025"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp" />

        <!-- Action chips -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/actions_chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:singleLine="true"
            app:singleSelection="false"
            app:chipSpacing="8dp" />

        <!-- Edit/Delete buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageButton
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="@color/primary_color" />

            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="@color/primary_color" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
